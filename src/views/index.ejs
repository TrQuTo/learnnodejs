<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Dalavina</title>
</head>

<body>

    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div>
        <h1>This is Dalavina -- Index Page User</h1>
        <h2>List User</h2>
    </div>
    <table class="w3-table-all w3-hoverable">
        <thead>
            <tr class="w3-light-grey">
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
                <td>
                    <%= dataUser[i].id %>
                </td>
                <td>
                    <%= dataUser[i].firstName %>
                </td>
                <td>
                    <%= dataUser[i].lastName %>
                </td>
                <td class="w3-padding w3-xlarge">
                    <a href="/details/user/<%= dataUser[i].id %>">
                        <span class="fa fa-file">&nbsp;</span>
                    </a>
                    <a href="/edit/user/<%= dataUser[i].id%>">
                        <span class="fa fa-edit">&nbsp;</span>
                    </a>
                    <a href="/delete/user/<%= dataUser[i].id %>">
                        <span class="fa fa-trash">&nbsp;</span>
                    </a>
                </td>
            </tr>
            <% } %>
    </table>
</body>

</html>